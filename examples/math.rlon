#lang rlon

/*
 Simple Math functions implemented in Rlon.
*/

(factorial)->{
  (@ > 2)?{
    (@ * (@ - 1).(factorial))
  }~{
    @
  }
}

(fibonacci)->{
  (@ > 1)?{
    ((@ - 1).(fibonacci) + (@ - 2).(fibonacci))
  }
}

(average)->{
  (@::(sum) / @.(length))
}

(sum)->{
  @::(@[0] + @[1])
}

(incEach)->{
  @:(@ + 1)
}
