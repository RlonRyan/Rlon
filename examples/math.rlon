/*
 Functions
*/
(abs)->{
  (@ < 0)?{
    (0 - @)
  }~{
    @
  }
}

(avg)->{
  @::{(@[0][0] + @[1]), (@[0][1] + 1)}.(@[0] / @[1])
}

(sum)->{
  (@[0] + @[1])
}

(squared)->{
  (@ * @)
}
